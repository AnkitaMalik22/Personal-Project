const mongoose = require('mongoose');

const addedTeamsSchema = new mongoose.Schema({

   college_id: {
        type: String,
        ref: "College",
    },
    Name: {
        type: String,
        required: [true, 'Please Enter Your Name'],
        unique: true,
    },
    Role: {
        type: String,
        default: "team",
    },
    Avatar: {
        public_id: {
            type: String,
            // required:true
        },
        url: {
            type: String,
            // required:true
        },
    },
    Email: {
        type: String,
        required: [true, "Please Enter Your Email"],
        unique: true,
    },
    invited: {
        type: Boolean,
        default: false
    },
    invitationLink: {
        type: String,
        default: ''
    },

});

module.exports = mongoose.model('AddedTeams',addedTeamsSchema);